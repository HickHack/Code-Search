<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:weightSum="1"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="graham.com.codesearch.ResultActivity"
    tools:showIn="@layout/activity_result">

    <!-- Repo Image -->
    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/projectImage"
        android:layout_weight="0.05" />


    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/repoDescription"
        android:paddingLeft="@dimen/description_margin"
        android:paddingRight="@dimen/description_margin"
        android:text="@string/placeholder"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/table_row_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_weight="0.05"/>

    <View
        android:layout_width="@dimen/line_width"
        android:layout_height="1dp"
        android:layout_marginBottom="2sp"
        android:layout_marginTop="@dimen/line_margin"
        android:background="@android:color/darker_gray"/>

    <!-- Owner Name -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ownerNameTitle"
            android:layout_weight="0.05"
            android:layout_marginRight="@dimen/text_margin"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/owner"/>


        <TextView
            android:text="@string/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginLeft="@dimen/text_margin"
            android:id="@+id/ownerName" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/line_width"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/line_margin"
        android:layout_marginBottom="@dimen/line_margin_top"
        android:background="@android:color/darker_gray"/>

    <!-- Repo Name -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/repoNameTitle"
            android:layout_weight="0.05"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginRight="@dimen/text_margin"
            android:textStyle="bold"
            android:text="Repo Name:" />

        <TextView
            android:text="@string/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginRight="@dimen/text_margin"
            android:id="@+id/repoName" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/line_width"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/line_margin_top"
        android:layout_marginTop="@dimen/line_margin"
        android:background="@android:color/darker_gray"/>

    <!-- Created -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createdTitle"
            android:layout_weight="0.05"
            android:layout_marginRight="@dimen/text_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:text="@string/created" />



        <TextView
            android:text="@string/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_margin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/created" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/line_width"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/line_margin"
        android:layout_marginBottom="@dimen/line_margin_top"
        android:background="@android:color/darker_gray"/>

    <!-- Last Updated -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastUpdateTitle"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_weight="0.05"
            android:layout_marginRight="@dimen/text_margin"
            android:textStyle="bold"
            android:text="@string/updated" />



        <TextView
            android:text="@string/placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginRight="@dimen/text_margin"
            android:id="@+id/lastUpdated" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/line_width"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/line_margin"
        android:background="@android:color/darker_gray"/>

</LinearLayout>
